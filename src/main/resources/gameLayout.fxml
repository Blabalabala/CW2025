<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import com.comp2042.GameOverPanel?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.comp2042.GuiController">
    <!-- Full background -->
    <GridPane fx:id="brickPanel" hgap="1" vgap="1" />

    <!-- Timer and number of line clear show beside of the frame -->
    <HBox alignment="CENTER" spacing="5">

        <VBox alignment="CENTER" spacing="10">

            <!--Timer and Line clear show on the left side of the frame-->
            <HBox spacing="2" alignment="CENTER">
                <ImageView fx:id="minTens" fitWidth="30" fitHeight="40"/>
                <ImageView fx:id="minOnes" fitWidth="30" fitHeight="40"/>
                <Label text=":" style="-fx-font-size: 24; -fx-text-fill: white;"/>
                <ImageView fx:id="secTens" fitWidth="30" fitHeight="40"/>
                <ImageView fx:id="secOnes" fitWidth="30" fitHeight="40"/>
            </HBox>

            <!-- LINE COUNTER (Below timer) -->
            <Label fx:id="linesLabel" text="0"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;">
                <graphic>
                    <ImageView fitWidth="120" fitHeight="120" preserveRatio="true">
                        <image>
                            <Image url="Line.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Label>
        </VBox>




        <!--Total score show on top of frame -->
        <VBox alignment="CENTER" spacing="10">
        <Label fx:id="scoreLabel" text=" 0"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" >
            <graphic>
                <ImageView fitWidth="70" fitHeight="70" preserveRatio="true">
                    <image>
                        <Image url="Score.png" />
                    </image>
                </ImageView>
            </graphic>
        </Label>
        <!-- Move frame to center -->
        <StackPane
                maxWidth="150" maxHeight="400"
                prefWidth="150" prefHeight="400"
                styleClass="gameBoard">
            <!-- Background gris -->
            <GridPane fx:id="gamePanel" vgap="1" />
            <!-- Active falling brick overlay -->
            <Pane fx:id="brickOverlay" pickOnBounds="false" />
            <!-- Notification & Game Over -->
            <GameOverPanel fx:id="gameOverPanel" StackPane.alignment="CENTER" />
        </StackPane>
        </VBox>
    </HBox>

    <!-- Pause Button -->
    <VBox alignment="TOP_RIGHT" spacing="10" StackPane.alignment="TOP_RIGHT" style="-fx-padding: 10;">
        <Button fx:id="pauseButton" onAction="#pauseGame"
                style="-fx-font-size: 16px; -fx-font-weight: bold;-fx-background-color: transparent; -fx-padding: 0; ">

        <graphic>
            <ImageView fitWidth="120" fitHeight="120" preserveRatio="true">
                <image>
                    <Image url="pause.png" />
                </image>
            </ImageView>
        </graphic>
        </Button>
    </VBox>

    <!-- Pause Menu -->
    <StackPane fx:id="pauseMenu" visible="false"
               style="-fx-background-color: rgba(0, 0, 0, 0.6);"
               StackPane.alignment="CENTER">
        <VBox alignment="CENTER" spacing="20"
              style="-fx-background-color: #222; -fx-padding: 30; -fx-background-radius: 12;">
            <Label text="Game Paused"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <HBox spacing="15" alignment="CENTER">
                <Button text="Resume" onAction="#resumeGame"
                        style="-fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-background-color: #4CAF50; -fx-text-fill: white;
                               -fx-background-radius: 10; -fx-padding: 8 15;" />
                <Button text="Exit Game" onAction="#exitGame"
                        style="-fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-background-color: #f44336; -fx-text-fill: white;
                               -fx-background-radius: 10; -fx-padding: 8 15;" />
            </HBox>
        </VBox>
    </StackPane>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>
