<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import com.comp2042.GameOverPanel?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.comp2042.GuiController">
    <!-- Full background -->
    <GridPane fx:id="brickPanel" hgap="1" vgap="1" />

    <!-- Timer and number of line clear show beside of the frame -->
    <HBox alignment="CENTER" spacing="5">

        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="timerLabel" text="Timer: 3:00"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;
                          -fx-border-color:blue; -fx-border-radius:12; -fx-border-width: 2;
                          -fx-padding: 10;" />
            <Label fx:id="linesLabel" text="Lines: 0"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;
                          -fx-border-color:blue; -fx-border-radius:12; -fx-border-width: 2;
                          -fx-padding: 10;" />
            <!--Total score show on top of frame -->
        </VBox>
        <VBox alignment="CENTER" spacing="10">
        <Label fx:id="scoreLabel" text="Score: 0"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;
                      -fx-border-color:blue; -fx-border-radius:12; -fx-border-width: 2;
                      -fx-padding: 10;" />
        <!-- Move frame to center -->
        <StackPane
                maxWidth="150" maxHeight="400"
                prefWidth="150" prefHeight="400"
                styleClass="gameBoard">
            <!-- Background gris -->
            <GridPane fx:id="gamePanel" vgap="1" />
            <!-- Active falling brick overlay -->
            <Pane fx:id="brickOverlay" pickOnBounds="false" />
            <!-- Notification & Game Over -->
            <GameOverPanel fx:id="gameOverPanel" StackPane.alignment="CENTER" />
        </StackPane>
        </VBox>
    </HBox>

    <!-- Pause Button -->
    <VBox alignment="TOP_RIGHT" spacing="10" StackPane.alignment="TOP_RIGHT" style="-fx-padding: 10;">
        <Button fx:id="pauseButton" text="â¸" onAction="#pauseGame"
                style="-fx-font-size: 16px; -fx-font-weight: bold;
                       -fx-background-color: #3366ff; -fx-text-fill: white;
                       -fx-background-radius: 10; -fx-padding: 8 15;" />
    </VBox>

    <!-- Pause Menu -->
    <StackPane fx:id="pauseMenu" visible="false"
               style="-fx-background-color: rgba(0, 0, 0, 0.6);"
               StackPane.alignment="CENTER">
        <VBox alignment="CENTER" spacing="20"
              style="-fx-background-color: #222; -fx-padding: 30; -fx-background-radius: 12;">
            <Label text="Game Paused"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <HBox spacing="15" alignment="CENTER">
                <Button text="Resume" onAction="#resumeGame"
                        style="-fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-background-color: #4CAF50; -fx-text-fill: white;
                               -fx-background-radius: 10; -fx-padding: 8 15;" />
                <Button text="Exit Game" onAction="#exitGame"
                        style="-fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-background-color: #f44336; -fx-text-fill: white;
                               -fx-background-radius: 10; -fx-padding: 8 15;" />
            </HBox>
        </VBox>
    </StackPane>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>
