<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import com.comp2042.GameOverPanel?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.comp2042.GuiController">
    <!-- Full background -->
    <GridPane fx:id="brickPanel" hgap="1" vgap="1" />

    <!-- Timer and number of line clear show beside of the frame -->
    <HBox alignment="CENTER" spacing="20">

        <VBox alignment="CENTER" spacing="15">

            <!-- Timer -->
            <VBox fx:id="statusContainer" alignment="CENTER" spacing="10"
                  style="-fx-padding: 10; -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 8;
             -fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 8;">
                <ImageView fitWidth="120" fitHeight="40" preserveRatio="true">
                    <image>
                        <Image url="@Timer.png" />
                    </image>
                </ImageView>

                <VBox fx:id="statusContainer2" alignment="CENTER" spacing="10"
                      style="-fx-padding: 10; -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 8;">
                <HBox spacing="2" alignment="CENTER">
                    <ImageView fx:id="minTens" fitWidth="30" fitHeight="40"/>
                    <ImageView fx:id="minOnes" fitWidth="30" fitHeight="40"/>
                    <Label text=":" style="-fx-font-size: 24; -fx-text-fill: white;"/>
                    <ImageView fx:id="secTens" fitWidth="30" fitHeight="40"/>
                    <ImageView fx:id="secOnes" fitWidth="30" fitHeight="40"/>
                </HBox>
                </VBox>
            </VBox>


            <!-- Line -->
        <VBox fx:id="statusContainer3" alignment="CENTER" spacing="10"
              style="-fx-padding: 10; -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 8;">
            <VBox alignment="CENTER" spacing="5">
                <ImageView fitWidth="120" fitHeight="40" preserveRatio="true">
                    <image>
                        <Image url="@Line.png" />
                    </image>
                </ImageView>
                <VBox fx:id="statusContainer4" alignment="CENTER" spacing="10"
                      style="-fx-padding: 10; -fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 8;">
                <HBox fx:id="linesDisplay" spacing="2" alignment="CENTER">
                    <ImageView fx:id="lineHundreds" fitWidth="20" fitHeight="30" />
                    <ImageView fx:id="lineTens" fitWidth="20" fitHeight="30" />
                    <ImageView fx:id="lineOnes" fitWidth="20" fitHeight="30" />
                </HBox>
            </VBox>
        </VBox>
        </VBox>
        </VBox>

        <VBox alignment="CENTER" spacing="15">

            <!-- Score -->
            <HBox alignment="CENTER" spacing="5">
                <ImageView fitWidth="70" fitHeight="40" preserveRatio="true">
                    <image>
                        <Image url="@Score.png" />
                    </image>
                </ImageView>

                <HBox fx:id="scoreDisplay" spacing="2" alignment="CENTER">
                    <ImageView fx:id="scoreThousands" fitWidth="20" fitHeight="30" />
                    <ImageView fx:id="scoreHundreds" fitWidth="20" fitHeight="30" />
                    <ImageView fx:id="scoreTens" fitWidth="20" fitHeight="30" />
                    <ImageView fx:id="scoreOnes" fitWidth="20" fitHeight="30" />
                </HBox>
            </HBox>

    <HBox alignment="CENTER" spacing="20">
        <!-- Game Board -->
        <VBox alignment="CENTER" spacing="10">
            <StackPane maxWidth="150" maxHeight="400"
                       prefWidth="150" prefHeight="400"
                       styleClass="gameBoard">
                <GridPane fx:id="gamePanel" vgap="1" />
                <Pane fx:id="brickOverlay" pickOnBounds="false" />
                <Pane fx:id="groupNotification" pickOnBounds="false" />
                <GameOverPanel fx:id="gameOverPanel" StackPane.alignment="CENTER" />
            </StackPane>
        </VBox>
    </HBox>
        </VBox>

        <!-- Next Block Preview -->
        <VBox alignment="CENTER" spacing="2"
              prefHeight="150" maxHeight="150" minHeight="150"
              prefWidth="150" maxWidth="150" minWidth="150"
              style="-fx-padding: 5; -fx-border-color: white; -fx-border-width: 5; -fx-border-radius: 5;">
            <Label text="Next" style="-fx-text-fill: white; -fx-font-size: 20;-fx-font-weight: bold;" />

            <StackPane fx:id="nextBlockContainer"
                       prefWidth="70" prefHeight="50"
                       style="-fx-background-color: rgba(0,0,0,0.3);"
                       alignment="CENTER">
                <Pane fx:id="nextBlockPane" prefWidth="120" prefHeight="80"/>
            </StackPane>
        </VBox>


    </HBox>

    <HBox alignment="TOP_RIGHT" spacing="10"
          StackPane.alignment="TOP_RIGHT" style="-fx-padding: 10;">


        <!-- Restart button -->
        <Button fx:id="restartButton" onAction="#restartGame"
                style="-fx-font-size: 16px; -fx-font-weight: bold;
               -fx-background-color: transparent; -fx-padding: 0;">
            <graphic>
                <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
                    <image>
                        <Image url="@Restart.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <!-- Pause button -->
        <Button fx:id="pauseButton" onAction="#pauseGame"
                style="-fx-font-size: 16px; -fx-font-weight: bold;
               -fx-background-color: transparent; -fx-padding: 0;">
            <graphic>
                <ImageView fitWidth="120" fitHeight="120" preserveRatio="true">
                    <image>
                        <Image url="@pause.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>

    <!-- Pause menu -->
    <StackPane fx:id="pauseMenu" visible="false"
               style="-fx-background-color: rgba(0, 0, 0, 0.6);"
               StackPane.alignment="CENTER">
        <VBox alignment="CENTER" spacing="20"
              style="-fx-background-color: #222; -fx-padding: 30; -fx-background-radius: 12;">
            <Label text="Game Paused"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <HBox spacing="15" alignment="CENTER">
                <Button text="Resume" onAction="#resumeGame"
                        style="-fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-background-color: #4CAF50; -fx-text-fill: white;
                               -fx-background-radius: 10; -fx-padding: 8 15;" />
                <Button text="Exit Game" onAction="#exitGame"
                        style="-fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-background-color: #f44336; -fx-text-fill: white;
                               -fx-background-radius: 10; -fx-padding: 8 15;" />
            </HBox>
        </VBox>
    </StackPane>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>